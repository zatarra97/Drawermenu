<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Home fragment"
        android:textSize="36sp" />


<!--Rigo 1: prime 2 card view -->
    <!-- TODO bisogna sistemare la grafica per l'orientamento -->
    <!-- TODO orizzontale aggiungendo lo scorrimento -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp">
            <android.support.v7.widget.CardView
                android:layout_marginLeft="29dp"
                android:id="@+id/cardView1"
                android:layout_gravity="left"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="5dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageCardView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_view_profilo" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginLeft="230dp"
            android:id="@+id/cardView2"
            android:layout_gravity=""
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageCardView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/card_view_diari" />


        </android.support.v7.widget.CardView>
    </RelativeLayout>

<!--rigo 2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="550dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_marginLeft="29dp"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageCardView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_view_eventi" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity=""
            android:layout_marginLeft="230dp"
            app:cardCornerRadius="5dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageCardView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_view_coupon" />


        </android.support.v7.widget.CardView>
    </RelativeLayout>

</FrameLayout>